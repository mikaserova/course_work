<UserControl x:Class="course_app.Views.general_schedule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:course_app.Views"
             xmlns:viewmodels="clr-namespace:course_app.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="154*"></RowDefinition>
            <RowDefinition Height="52*"></RowDefinition>

        </Grid.RowDefinitions>
        <DataGrid x:Name="shift_table" AutoGenerateColumns="False" ItemsSource="{Binding Shifts}" LoadingRow="DataGrid_LoadingRow" >
            <DataGrid.Columns>

                <DataGridTextColumn Header="Starts at:" Binding="{Binding Path=shift_start_time}"></DataGridTextColumn>
                <DataGridTextColumn Header="Ends at:" Binding="{Binding Path=shift_end_time}"></DataGridTextColumn>
                <DataGridTextColumn Header="Employee:" Binding="{Binding Path= employee}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
